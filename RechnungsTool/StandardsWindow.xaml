        <Button x:Name="btn_standardwerte_removeSelReceiver" Content="Empfänger löschen" Margin="158.667,0,202.646,62.122" VerticalAlignment="Bottom" Height="25"/>
        <Button x:Name="btn_standardwerte_addSender" Content="Absender hinzufügen" HorizontalAlignment="Left" Margin="10,0,0,23.313" VerticalAlignment="Bottom" Width="126" Height="25" RenderTransformOrigin="0.475,2.081"/>
        <Button x:Name="btn_standardwerte_addReceiver" Content="Empfänger hinzufügen" Margin="158.667,0,202.646,23.313" VerticalAlignment="Bottom" Height="25" RenderTransformOrigin="0.488,1.212"/>
