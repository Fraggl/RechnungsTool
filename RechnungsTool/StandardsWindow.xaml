        <Border BorderBrush="#FF939393" BorderThickness="1" Height="1" Margin="10,0,202.646,173.543" VerticalAlignment="Bottom"/>
        <Label x:Name="lbl_standardwerte_sender" Content="Absender" HorizontalAlignment="Left" Margin="10,0,0,128.583" VerticalAlignment="Bottom" Width="99.623"/>
        <ComboBox x:Name="cBox_standardwerte_sender" HorizontalAlignment="Left" Margin="10,0,0,101.623" VerticalAlignment="Bottom" Width="126"/>
