        <TextBox x:Name="tb_standards_sender_street" HorizontalAlignment="Left" Height="23" Margin="16,91.383,0,0" TextWrapping="Wrap" Text="Straße" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tb_standards_sender_zip" HorizontalAlignment="Left" Margin="16,121.05,0,0" TextWrapping="Wrap" Text="Plz Stadt" Width="120" Height="23" VerticalAlignment="Top"/>
        <TextBox x:Name="tb_standards_sender_phone" HorizontalAlignment="Left" Margin="16,149.05,0,0" TextWrapping="Wrap" Text="Telefonnr." Width="120" Height="23" VerticalAlignment="Top" />

        <Label x:Name="label_Copy" Content="Empfänger:" Margin="158.667,31.999,235.022,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tb_standards_receiver_name" Height="51.423" Margin="158.667,62.96,208.645,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top"/>
        <TextBox x:Name="tb_standards_receiver_street" Height="23" Margin="158.667,121.05,208.645,0" TextWrapping="Wrap" Text="Straße" VerticalAlignment="Top"/>
